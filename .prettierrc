{
  "singleQuote": true,
  "trailingComma": "all",
  "useTabs": true,
  "semi": true,
  "printWidth": 80,
  "overrides": [
    {
      "files": ["**/*.json", ".prettierrc"],
      "excludeFiles": "package-lock.json",
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.md",
      "options": {
        "printWidth": 80
      }
    }
  ]
}
